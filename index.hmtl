<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Conway's Game of Life - reTerminal</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Retro terminal font -->
  <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">

  <style>
    html, body {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background: #000;
      color: #0aff0a;
      overflow: hidden;
      font-family: 'VT323', monospace;
    }

    #title-bar {
      position: fixed;
      top: 10px;
      width: 100%;
      text-align: center;
      color: #0aff0a;
      font-size: 32px;
      letter-spacing: 3px;
      text-shadow: 0 0 6px rgba(0,255,0,0.7);
      pointer-events: none;
      z-index: 10;
    }

    canvas {
      display: block;
      width: 100%;
      height: 100%;
      margin-top: 50px; /* move canvas below title */
    }

    #info {
      position: fixed;
      left: 12px;
      bottom: 10px;
      font-size: 16px;
      opacity: 0.6;
      color: #0aff0a;
      pointer-events: none;
      text-shadow: 0 0 6px rgba(0,255,0,0.4);
    }
  </style>
</head>
<body>

  <div id="title-bar">CONWAY'S GAME OF LIFE</div>
  <canvas id="life"></canvas>
  <div id="info"></div>

  <script>
    const CELL_SIZE = 8;
    const STEP_INTERVAL = 100;
    const LIVE_COLOR = "#0aff0a";
    const DEAD_COLOR = "#000000";

    function getTodaySeed() {
      const now = new Date();
      return now.getFullYear() * 10000 +
             (now.getMonth() + 1) * 100 +
             now.getDate();
    }

    function mulberry32(a) {
      return function () {
        let t = a += 0x6D2B79F5;
        t = Math.imul(t ^ (t >>> 15), t | 1);
        t ^= t + Math.imul(t ^ (t >>> 7), t | 61);
        return ((t ^ (t >>> 14)) >>> 0) / 4294967296;
      };
    }

    function formatDate(d) {
      return `${d.getFullYear()}-${String(d.getMonth()+1).padStart(2,'0')}-${String(d.getDate()).padStart(2,'0')}`;
    }

    class GameOfLife {
      constructor(canvas) {
        this.canvas = canvas;
        this.ctx = canvas.getContext("2d");
        this.init();
        window.addEventListener("resize", () => this.init());
      }

      init() {
        const rect = this.canvas.getBoundingClientRect();
        this.canvas.width = rect.width;
        this.canvas.height = rect.height;

        this.cols = Math.floor(this.canvas.width / CELL_SIZE);
        this.rows = Math.floor(this.canvas.height / CELL_SIZE);

        const seed = getTodaySeed();
        this.rand = mulberry32(seed);

        this.grid = Array.from({length: this.rows}, () =>
          Array.from({length: this.cols}, () =>
            this.rand() < 0.25 ? 1 : 0
          )
        );

        this.last = 0;
      }

      neighbors(x, y) {
        let n = 0;
        for (let dy=-1; dy<=1; dy++) {
          for (let dx=-1; dx<=1; dx++) {
            if (dx===0 && dy===0) continue;
            const xx = x + dx, yy = y + dy;
            if (xx>=0 && xx<this.cols && yy>=0 && yy<this.rows) {
              n += this.grid[yy][xx];
            }
          }
        }
        return n;
      }

      step() {
        const next = [];
        for (let y=0; y<this.rows; y++) {
          next[y] = [];
          for (let x=0; x<this.cols; x++) {
            const alive = this.grid[y][x];
            const n = this.neighbors(x, y);
            next[y][x] = alive ? (n===2 || n===3) : (n===3);
          }
        }
        this.grid = next;
      }

      draw() {
        const ctx = this.ctx;
        ctx.fillStyle = DEAD_COLOR;
        ctx.fillRect(0, 0, this.canvas.width, this.canvas.height);

        ctx.fillStyle = LIVE_COLOR;
        for (let y=0; y<this.rows; y++) {
          for (let x=0; x<this.cols; x++) {
            if (this.grid[y][x]) {
              ctx.fillRect(x*CELL_SIZE, y*CELL_SIZE, CELL_SIZE, CELL_SIZE);
            }
          }
        }
      }

      loop(ts) {
        if (!this.last) this.last = ts;
        if (ts - this.last > STEP_INTERVAL) {
          this.step();
          this.draw();
          this.last = ts;
        }
        requestAnimationFrame((t) => this.loop(t));
      }
    }

    // Boot on page load (AND every pagelist refresh)
    document.addEventListener("DOMContentLoaded", () => {
      const canvas = document.getElementById("life");
      const info = document.getElementById("info");

      const now = new Date();
      info.textContent = `Seed: ${formatDate(now)}`;

      const game = new GameOfLife(canvas);
      game.loop();
    });
  </script>
</body>
</html>
